{
  "name": "imperial-archive-monorepo",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "concurrently -n web,studio -c auto \"npm:dev:web\" \"npm:dev:studio\"",
    "dev:web": "npm -w @ac/web run dev",
    "dev:studio": "npm -w @ac/studio run dev",
    "build": "npm -w @ac/web run build && npm -w @ac/studio run build",
    "lint": "npm -ws run lint",
    "typecheck": "npm -ws run typecheck"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "typescript": "^5.6.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.9.5"
  }
}